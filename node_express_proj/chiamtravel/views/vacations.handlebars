<h1>Vacations</h1>
{{#each vacations}}
    <div class="vacation">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
        {{#if available}}
            <span class="price">{{price}}</span>
            <a href="/buyvacation?sku={{sku}}" class="btn btn-default">Buy Now!</a>
        {{else}}
            <span class="sold">We're sorry, this vacation is sold out.</span>
        {{/if}}
    </div>
    {{/each}}